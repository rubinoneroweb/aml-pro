<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Operatore</th>
      <th>Lavorazione</th>
      <th>Commessa</th>
      <th>Quantità</th>
      <th>Velocità</th>
      <th>Completato</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.operator.name %></td>
        <td><%= task.metalwork.description %></td>
        <td><%= task.order_id %></td>
        <td><%= task.quantity %></td>
        <td><%= task.speed %></td>
        <td><%= task.done %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

