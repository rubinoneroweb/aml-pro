
<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="small-6 columns">
        <%= f.association :operator, :label=>"Operatore" %>
      </div>
      <div class="small-6 columns">
        <%= f.association :metalwork, label_method: :description, :label => "Processo" %>
      </div>
    </div>
    <div class="row">
      <div class="small-3 columns">
        <%= f.association :order, label_method: :label_print, :label=>"Commessa" %>
      </div>
      <div class="small-3 columns">
        <%= f.input :quantity, :label=>"Quantità" %>
      </div>
      <div class="small-2 columns">
        <%= f.input :speed, :label=> "Velocità (pz./min)" %>
      </div>
      <div class="small-2 columns">
        <%= f.input :done, :label=>"Completato" %>
      </div>
      <div class="small-2 columns">
        <%= f.input :priority, :label=>"Priorità" %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
