<p id="notice"><%= notice %></p>
<div class="row"><h2>Dettagli Lavorazione</h2></div>
<div class="row">
  <div class="medium-6 columns">
    <strong>Operatore:</strong>
    <%= @job.task.operator.name %>
    <br>
     <strong>Processo:</strong>
      <%= @job.task.metalwork.description %>
  </div>
   <div class="medium-6 columns">
    <strong>Articolo:</strong>
    <%= @job.article.code %>
    <br>
  <strong>Iniziato:</strong>
  <%= @job.start_time_h %>
  <br>
  <strong>Concluso:</strong>
  <%= @job.end_time_h %>

  </div>
  
  
  
</div>

<div class="row">
  <div class="medium-6 columns">
    <strong>Quantità:</strong> <%= @job.q_tot %>
    <br>
    <strong>Tempo:</strong> <%= @job.haul %>
  </div>
  <div class="medium-6 columns">
    <strong>Velocità:</strong>         <span class="<%= @job.alert_class %>"><%= @job.speed.round(4) %></span>
    <br>
    <strong>Commessa:</strong> <%= @job.order.label_print if @job.order.present?%>
  </div>
  
</div>
<hr>
<div class="row">
<%= link_to 'Torna alle lavorazioni', jobs_path, :class=>"button large" %>
</div
