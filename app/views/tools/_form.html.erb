<%= simple_form_for(@tool) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :label=>"Nome" %>
    <%= f.input :description, :label=>"Descrizione" %>
    <%= f.input :picture, :label=>"Immagine" %>
    <%= f.input :machine_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salva" %>
  </div>
<% end %>
