<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="medium-6 columns">
        <%= f.association :customer, :label=>"Cliente" %>
      </div>
      <div class="medium-6 columns">
        <%= f.association :article, label_method: :label_desc, :label=>"Articolo" %>
      </div>
    </div>
    
    <div class="row">
      <div class="medium-6 columns">
        <%= f.input :date_ric, as: :date, html5: true,:data=>{:date_format=>"dd/mm/yyyy"}, :label=>"Data ricezione ordine", :class=>"datepicker"%>
        <hr>
        <%= f.input :date_cons, as: :date, html5: true, :label=>"Data consegna ordine", :class=>"datepicker"%>
         <hr>
        <%= f.input :packaging, :label=>"Imballaggio" %>
      </div>
      <div class="medium-3 columns">
        <%= f.input :note %>
        <hr>
        <%= f.input :ord_number, :label=>"Numero Ordine" %>
      </div>
      <div class="medium-3 columns">
       
        <%= f.input :total_pieces, :label=>"Num. totale pezzi", required: true %>
      </div>
    </div>
    
  </div>

  <div class="form-actions">
    <div class="row">
    <%= f.button :submit, "Inserisci Commessa", :class=>"button"  %>
  </div>
<% end %>
