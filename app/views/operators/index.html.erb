<p id="notice"><%= notice %></p>

<div class="row"><h1>Lista Operatori</h1></div>
<div class="row">
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cognome</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operators.each do |operator| %>
      <tr>
        <td><%= operator.name %></td>
        <td><%= operator.surname %></td>
        <td><%= image_tag(operator.picture_url) if operator.picture.present? %></td>
        <td><%= link_to 'Mostra', operator, :class=>"button" %></td>
        <td><%= link_to 'Modifica', edit_operator_path(operator), :class=>"button warning" %></td>
        <td><%= link_to 'Elimina', operator, method: :delete, data: { confirm: 'Sei sicuro?' }, :class=>"button alert" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<div class="row">
  <%= link_to 'Inserisci Operatore', new_operator_path, :class=>"button" %>
</div>
