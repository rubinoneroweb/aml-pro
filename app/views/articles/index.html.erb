<p id="notice"><%= notice %></p>
<div class="row"><h1>Elenco Articoli</h1></div>

<div class="row">
  <table>
    <thead>
      <tr>
        <th>Codice</th>
        <th>Descrizione</th>
        <th>Immagine</th>
        <th>Disegno</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.code %></td>
          <td><%= article.description %></td>
          <td><%= article.picture %></td>
          <td><%= article.drawing %></td>
          <td><%= link_to 'Dettagli', article, :class=>"button" %></td>
          <td><%= link_to 'Modifica', edit_article_path(article), :class=>"button warning" %></td>
          <td><%= link_to 'Elimina', article, method: :delete, data: { confirm: 'Sei sicuro?' }, :class=>"button alert" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<div class="row">
  <%= link_to 'Inserisci nuovo Articolo', new_article_path, :class=>"button" %>
</div>