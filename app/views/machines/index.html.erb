<p id="notice"><%= notice %></p>

<h1>Lista macchinari</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrizione</th>
      <th>Immagine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @machines.each do |machine| %>
      <tr>
        <td><%= machine.name %></td>
        <td><%= machine.description %></td>
        <td><%= image_tag(machine.picture_url) if machine.picture.exists? %></td>
        <td><%= link_to 'Mostra', machine %></td>
        <td><%= link_to 'Modifica', edit_machine_path(machine) %></td>
        <td><%= link_to 'Elimina', machine, method: :delete, data: { confirm: 'Sei sicuro??' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Inserisci Macchinario', new_machine_path %>
